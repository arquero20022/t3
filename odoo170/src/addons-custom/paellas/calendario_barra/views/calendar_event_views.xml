<odoo>
    <record id="view_calendar_event_form" model="ir.ui.view">
        <field name="name">calendar.event.form</field>
        <field name="model">calendar.event</field>
        <field name="arch" type="xml">
            <form string="Meetings" js_class="calendar_form" __validate__="1">
                <!-- Grupo de campos principales -->
                <group>
                    <field name="name" string="Meeting Title"/>
                    <field name="start" string="Start Date"/>
                    <field name="stop" string="End Date"/>
                    <field name="recurrence_id" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                    <field name="res_model_name" invisible="1"/>
                </group>

                <!-- InformaciÃ³n adicional basada en reglas de visibilidad -->
                <group>
                    <div class="alert alert-info oe_edit_only" role="status">
                        <p>Edit recurring event</p>
                    </div>
                </group>

                <!-- Campos adicionales de la vista -->
                <group>
                    <field name="description" widget="text" string="Description"/>
                    <field name="partner_ids" widget="many2many_tags" string="Attendees"/>
                    <field name="location" string="Location"/>
                </group>


            </form>
        </field>
        <fields priority="99"/>
    </record>
</odoo>
